# Cache static assets for 1 year (immutable)
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
*.jpg
  Cache-Control: public, max-age=31536000, immutable

*.jpeg
  Cache-Control: public, max-age=31536000, immutable

*.png
  Cache-Control: public, max-age=31536000, immutable

*.webp
  Cache-Control: public, max-age=31536000, immutable

*.svg
  Cache-Control: public, max-age=31536000, immutable

*.gif
  Cache-Control: public, max-age=31536000, immutable

*.ico
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
*.woff
  Cache-Control: public, max-age=31536000, immutable

*.woff2
  Cache-Control: public, max-age=31536000, immutable

*.ttf
  Cache-Control: public, max-age=31536000, immutable

*.eot
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS and JS for 1 year (hashed filenames)
*.css
  Cache-Control: public, max-age=31536000, immutable

*.js
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - cache for 1 hour, revalidate
# Also add early hints for critical resources
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

/
  Cache-Control: public, max-age=3600, must-revalidate
  Link: </paygos/paygos-hero.webp>; rel=preload; as=image; type=image/webp
  Link: <https://images.unsplash.com>; rel=preconnect
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin

/index.html
  Cache-Control: public, max-age=3600, must-revalidate
  Link: </paygos/paygos-hero.webp>; rel=preload; as=image; type=image/webp
  Link: <https://images.unsplash.com>; rel=preconnect
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin

/**/
  Cache-Control: public, max-age=3600, must-revalidate
  Link: <https://images.unsplash.com>; rel=preconnect
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin

# JSON files - moderate cache
*.json
  Cache-Control: public, max-age=86400, must-revalidate

# XML files (sitemaps, RSS)
*.xml
  Cache-Control: public, max-age=86400, must-revalidate
